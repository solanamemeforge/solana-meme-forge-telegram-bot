# =============================================================================
# SOLANA MEMECOIN BOT - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values

# BOT CONFIGURATION
# =============================================================================
DEBUG_MODE=false
SOLANA_NETWORK=mainnet-beta

# TELEGRAM BOT TOKENS
# =============================================================================
# Get these from @BotFather on Telegram
MAIN_BOT_TOKEN=your-main-bot-token-here
SUPPORT_BOT_TOKEN=your-support-bot-token-here

# ADMIN SETTINGS
# =============================================================================
# Your Telegram user ID (get from @userinfobot)
ADMIN_ID=123456789

# SOLANA CONFIGURATION
# =============================================================================
# Get API key from https://helius.xyz
HELIUS_API_KEY=your-helius-api-key-here

# Predefined mint private key (Base58 encoded, 32 bytes)
PREDEFINED_MINT_PRIVATE_KEY=your-predefined-mint-private-key-here

# IPFS CONFIGURATION
# =============================================================================
# Get API keys from https://pinata.cloud
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# PAYMENT SETTINGS
# =============================================================================
# Payment amount in SOL
PAYMENT_AMOUNT=0.09

# Service wallet address for receiving payments
SERVICE_WALLET_ADDRESS=your-service-wallet-address-here

# REFERRAL SYSTEM
# =============================================================================
# Commission rates (as decimals, e.g., 0.10 = 10%)
REFERRAL_TOKEN_COMMISSION=0.10
REFERRAL_CUSTOM_COMMISSION=0.50

# CUSTOM ADDRESS PRICING (in SOL)
# =============================================================================
CUSTOM_ADDRESS_4_CHAR=0.03
CUSTOM_ADDRESS_5_CHAR=0.10
CUSTOM_ADDRESS_6_CHAR=0.20
CUSTOM_ADDRESS_7_CHAR=0.35
CUSTOM_ADDRESS_8_CHAR=0.50
CUSTOM_ADDRESS_9_CHAR=0.75
CUSTOM_ADDRESS_10_CHAR=1.00

# DATABASE SETTINGS
# =============================================================================
# Maximum wallets per EndsWith pattern in database
MAX_WALLETS_PER_ENDSWITH=100

# BONUS SYSTEM
# =============================================================================
# Number of free custom addresses for new users
BONUS_CUSTOM_ADDRESSES=3

# =============================================================================
# IMPORTANT SECURITY NOTES:
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Keep your bot tokens and API keys secure
# 3. Use environment variables in production
# 4. Regularly rotate your API keys
# 5. Set up proper access controls for your databases